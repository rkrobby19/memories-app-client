export const getServerSideProps = async ({ params }) => {
  console.log(params);
  const { id } = params;
  const res = await fetch(`https://jsonplaceholder.typicode.com/users/${id}`);
  const data = await res.json();

  return {
    props: { posts: data },
  };
};
